        android:key="speed_preference"
        android:defaultValue="50"
        android:summary="默认值：50 "
        android:title="语速" />
    <EditTextPreference
        android:dialogTitle="请输入音调(0-100)"
        android:key="pitch_preference"
        android:defaultValue="50"
        android:summary="默认值：50 "
        android:title="音调" />
    <EditTextPreference
        android:dialogTitle="请输入音量(0-100)"
        android:key="volume_preference"
        android:defaultValue="50"
        android:summary="默认值：50 "
        android:title="音量" />

</PreferenceScreen>